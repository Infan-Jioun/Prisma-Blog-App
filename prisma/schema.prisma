generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum PostStatus {
  DRAFT
  PUBLIHSED
  ARCIVHED
}

enum CommentStasus {
  APPROVED
  REJECT
}

model Post {
  id         String     @id @default(uuid())
  title      String     @db.VarChar(200)
  content    String     @db.Text
  tumbnail   String?
  isFeatured Boolean    @default(false)
  status     PostStatus @default(PUBLIHSED)
  tags       String[]
  views      Int        @default(0)
  authorId   String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

model Comment {
  id       String   @id @default(uuid())
  created  DateTime @default(now())
  content  String   @db.Text
  authorId String
  postId   String
  parentId String?
  status CommentStasus @default(APPROVED)
  updated  DateTime @updatedAt
}
