enum PostStatus {
    DRAFT
    PUBLIHSED
    ARCIVHED
}



model Post {
    id         String     @id @default(uuid())
    title      String     @db.VarChar(200)
    content    String     @db.Text
    tumbnail   String?
    isFeatured Boolean    @default(false)
    status     PostStatus @default(PUBLIHSED)
    tags       String[]
    views      Int        @default(0)
    authorId   String
    createdAt  DateTime   @default(now())
    updatedAt  DateTime   @updatedAt
    comments   Comment[]

    // all post find 
    // schema Name Altenative name create 
    @@index([authorId])
    @@map("posts")
}

